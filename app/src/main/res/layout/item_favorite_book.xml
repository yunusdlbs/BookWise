<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="30dp"
    android:background="@drawable/background_book_item">

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitap Adı"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yazar"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/bookDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Açıklama"
        android:textColor="#777"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/bookCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori: -"
        android:textColor="#444"/>

    <TextView
        android:id="@+id/bookPageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayfa: -"
        android:textColor="#444"/>

    <TextView
        android:id="@+id/bookStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stok: -"
        android:textColor="#444"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Ödünç Al"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_marginStart="5dp"
            android:text="Favorilerden Kaldır"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>
