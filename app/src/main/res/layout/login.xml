<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/library_home">

    <!-- Parola -->

    <!-- Login Butonu -->

    <!-- Register Butonu -->

    <Button
        android:id="@+id/login"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#FF9800"
        android:elevation="6dp"
        android:text="GİRİŞ"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnforgetpassword"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#F44336"
        android:elevation="6dp"
        android:text="PAROLAMI UNUTTUM"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/aboutus"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#8BC34A"
        android:elevation="6dp"
        android:text="HAKKIMIZDA"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:inputType="textPassword"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edittext_background"
        android:hint="Password"
        android:padding="12dp"  />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/edittext_background"
        android:hint="E-Mail"
        android:inputType="text"
        android:padding="12dp" />

    <Button
        android:id="@+id/register"
        android:backgroundTint="#0095FF"
        android:text="KAYDOL"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="30dp"
        android:elevation="6dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="668dp"
        android:text=""
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/allrights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="740dp"
        android:text="@BookWise, tüm hakları saklıdır."
        android:textColor="#FBFBFB"
        android:textSize="12sp" />

</RelativeLayout>